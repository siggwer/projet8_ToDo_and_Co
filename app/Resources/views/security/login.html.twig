{% extends 'base.html.twig' %}

{% block body %}
        <div class="row justify-content-md-center">
            <p class="center"><img class="slide-image" src="{{ asset('img/todolist_homepage.jpg') }}" alt="Responsive image"></p>
            {% if error %}
                <div class="alert alert-danger" role="alert">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
        </div>

<div class="row justify-content-md-center">
    <form action="{{ path('login_check') }}" method="post">

        <div class="form-group">
            <label for="username">Nom d'utilisateur :</label>
            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="Votre nom d'utilisateur">
        </div>


        <div class="form-group">
            <label for="password">Mot de passe :</label>
            <input type="password" class="form-control" id="password" name="_password" placeholder="Votre mot de passe">
        </div>
        <button class="btn btn-success" type="submit">Se connecter</button>
        <button class="btn btn-danger" type="reset">Effacer</button>
    </form>

</div>



{% endblock %}
