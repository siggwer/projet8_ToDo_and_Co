{% extends 'base.html.twig' %}

{% block body %}
    <h3>Créer une tâche</h3>
        <p><a href="{{ path('task_list') }}" class="btn btn-primary">Retour à la liste des tâches</a></p>
    <div class="row justify-content-lg-center">
        <div class="col-lg-6">
        {{ form_start(form, {'action' : path('task_create')}) }}
            {{ form_widget(form) }}

            <button type="submit" class="btn btn-success pull-right">Ajouter</button>
            <button type="reset" class="btn btn-warning pull-right">Effacer</button>
        {{ form_end(form) }}
        </div>


    </div>
{% endblock %}
