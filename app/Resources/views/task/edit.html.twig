{% extends 'base.html.twig' %}

{% block body %}
    <h3><strong>Modifier la tâche : {{ task.title }}</strong></h3>
    <p><a href="{{ path('task_list') }}" class="btn btn-info">Retour à la liste des tâches</a></p>
    <div class="row justify-content-lg-center">
        <div class="col-lg-6 - col-md-12 col-sm-auto">
            {{ form_start(form, {'action' : path('task_edit', { 'id' : task.id })}) }}
            {{ form_widget(form) }}

            <button type="submit" class="btn btn-success pull-right">Modifier</button>
            {{ form_end(form) }}
    </div>
    </div>
{% endblock %}
