{% extends 'base.html.twig' %}

{% block body %}
    <h3>Liste des tâches terminées <i class="fas fa-check-double"></i></h3>
    <p><a href="{{ path('task_list') }}" class="btn btn-info">Retour à la liste des tâches <i class="fas fa-list-ul"></i></a>
        <a href="{{ path('task_create') }}" class="btn btn-primary">Créer une tâche <i class="fas fa-pencil-alt"></i></a></p>
    <hr>
    <div class="row">
        {% for task in tasks %}
            {% if app.user == task.user %}
                <div class="col-sm-4 col-lg-4 col-md-4">
                    <div class="post-it">
                            <h4 style="text-align: center"><a href="{{ path('task_edit', {'id' : task.id }) }}">{{ task.title }}</a></h4>
                            <p>{{ task.content }}</p>
                            <p><small>Ajoutée le: {{ task.createdAt | date("d/m/Y") }}</small></p>
                        <div>
                            <div class="container mt-2">
                                <div class="row justify-content-center">
                                    <form action="{{ path('task_toggle', {'id' : task.id }) }}">
                                        <p class="separator"><button class="btn btn-success btn-sm"><i class="far fa-check-square fa-2x"></i></button> |</p>
                                    </form>
                                    <form action="{{ path('task_delete', {'id' : task.id }) }}">
                                        <p><button class="btn btn-danger btn-sm"><i class="fas fa-trash-alt fa-2x"></i></button></p>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}