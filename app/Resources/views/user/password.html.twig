{% extends 'base.html.twig' %}

{% block body %}
    <h1>Modifier le mot de passe de : <strong>{{ user.username }}</strong></h1>
    <p class="mb-2"><a href="{{ path('user_list')}}" class="btn btn-danger">Annuler</a></p>
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-12 col-sm-auto">
            {{ form_start(form, {'action' : path('user_password', {'id' : user.id})}) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-success pull-right">Modifier</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}